<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/main.css">
    <title>Cart</title>
</head>
<body>
    <a href="/"><button>back</button></a>
    <div class="table-holder">
    <table class="table table-striped table-bordered table-hover table-sm center">
        <thead class="thead-dark">
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price/Piece</th>
            </tr>
        </thead>
        
            <% 
            let sum=0;
            data.forEach(product => {
            %>
        <tr>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <% sum+= product.quantity * product.price %>
        </tr>
            <%
            });
            %>
        <tr class="table-info">
            <td colspan="4" class="">Grand Total : Rs. <%= sum %></td>    
        </tr>
        
    </table>
    <form action="/checkout" method="post">
        <input type="text" hidden value="<%= sum %>" name="total">
        <button class="btn btn-danger mt-3" type="submit">Checkout</button>
    </form>
    </div>
    <script src="../assets/main.js"></script>
    <%#// <script>getCartItems()</script> %>
</body>
</html>